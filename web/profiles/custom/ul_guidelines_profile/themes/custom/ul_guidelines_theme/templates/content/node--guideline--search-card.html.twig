{% set card_description = content.body %}
{% if content.field_shared_ref_description.0 is not empty %}
    {% set card_description = content.field_shared_ref_description %}
{% endif %}

{% set card = {
    title: label,
    description: card_description,
    linkHref: url,
    linkName: 'Go to @label'|t({'@label': label.0['#context']['value']}),
} %}

{% embed '@ul_guidelines_theme/2_pieces/card/card--featured.twig' with { item: item } %}
    {% block card_image %}
        {{ content.field_shared_ref_image }}
    {% endblock %}
{% endembed %}
