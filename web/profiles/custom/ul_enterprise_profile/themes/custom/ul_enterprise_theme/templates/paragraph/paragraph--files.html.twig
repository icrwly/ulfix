{% extends '@ul_enterprise_theme/4_regions/section--file-list.twig' %}
{% set class = class ~ ' section--paragraph' %}
{% if content.field_shared_bg_color.0 is not empty %}
  {% set class = class ~ ' section--bgcolor-' ~ content.field_shared_bg_color.0|render|lower|replace({' ': '-'}) %}
{% endif %}
{% set gutterclass = "paragraph-gutter paragraph--file-list" %}
{% if content.field_files_title|render or content.field_files_description|render %}
  {% set titleBar = {
      'title': content.field_files_title|render,
      'description': content.field_files_description|render
  } %}
{% endif %}

{% set items = content.field_files_files %}

{% block items %}
  {{ content.field_files_files }}
{% endblock %}
