<div class="hero--default-slide swiper-slide">
  {{- image -}}
  <div class="wrapper">
    <div class="content-container hero-content--background {{ content_bg }}">
      {% block hero_slide_title %}
        {% if title %}
          <h1>{{- title -}}</h1>
        {% endif %}
      {% endblock %}
      {% block hero_slide_description %}
        {% if description %}
          <p class="description">{{- description -}}</p>
        {% endif %}
      {% endblock %}
      {% block hero_slide_cta %}
        {# Primary CTA: #}
        {% if cta.link %}
          {% include '@ul_base_theme/2_pieces/button.twig' with {
            link: cta.link,
            color: cta.color,
            name: cta.name
          } %}
        {% endif %}
        {# Secondary CTA: #}
        {% if secondary_cta.link %}
          {% include '@ul_base_theme/2_pieces/button.twig' with {
            link: secondary_cta.link,
            color: secondary_cta.color,
            name: secondary_cta.name
          } %}
        {% endif %}
      {% endblock %}
    </div>
  </div>
</div>
