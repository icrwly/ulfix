{% extends "@ul_base_theme/4_regions/hero.twig" %}
{% set class = "hero--static" %}
{% set isCarousel = slides|length > 1 %}

{% if isCarousel %}
  {% set class = class ~ " is-carousel" %}
{% endif %}

{% block content %}
  <div class="swiper-container">
    <div class="swiper-wrapper">
      {% block hero_slides %}
        {% for slide in slides %}
          {% include '@ul_base_theme/3_components/slide--hero--static.twig' with slide only %}
        {% endfor %}
      {% endblock %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
  {% block footer %}
    {% if footer %}
      {% include '@ul_base_theme/3_components/hero__footer.twig' with footer only %}
    {% endif %}
  {% endblock %}
{% endblock %}
