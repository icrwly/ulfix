<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>UL Enterprise UI Templates</title>

  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="cleartype" content="on">

  <link rel="shortcut icon" href="{{base_path}}/build/favicon.ico">
  <script>
  // If fonts are cached, skip FFO.
  if (sessionStorage.fontsLoaded === 'true') {
    document.documentElement.classList.add("fonts-loaded")
  }
  else {
    var script = document.createElement("script")
    script.src = "{{base_path}}/build/scripts/fontloader.built.js"
    script.async = true
    document.head.appendChild(script)
  }
  </script>

  {% set stylesheet = direction|default('ltr') %}

  <link rel="stylesheet" href="{{base_path}}/build/styles/screen-{{stylesheet}}.css">
  {% if styleguide %}
    <link rel="stylesheet" href="{{base_path}}/build/styles/styleguide.css">
  {% endif %}
</head>
