  {% block content %}
    <a href="#" class="accordion" data-module="accordion" data-max-width="991" title="{{ aria_label_link_search }}" aria-label="{{ aria_label_link_search }}">
      <span class="icon icon-search"></span>
    </a>
    <div class="global-header__search-container">
