{% extends "@ul_base_theme/4_regions/section.twig" %}
{% set class = "section--gallery section--paragraph wrapper" %}

{% if is_carousel %}
  {% set class = class ~ " is-carousel" %}
{% endif %}

{% block content %}
  {% if title %}
    {% block header %}
      <div class="section__header">
        {% block title %}
            <h2 class="section__title">{{ title }}</h2>
        {% endblock %}
      </div>
    {% endblock %}
  {% endif %}
  <div class="section__body">
    {% if items %}
      {% if is_carousel %}
        <div class="carousel--default center-block max-width--desktop" data-module="contentCarousel">
          <div class="swiper-container swiper-container--has-outset-nav">
            <div class="swiper-wrapper">
              {% block carousel_item %}
                {% for item in items %}
                  <div class="swiper-slide">
                    <img src="{{ item.image }}" alt="{{ item.image_alt }}">
                  </div>
                {% endfor %}
              {% endblock %}
            </div>
            <div class="swiper-pagination swiper-pagination--l"></div>
            <div class="swiper-navigation swiper-navigation--arrows">
              <div class="swiper-button swiper-button-next">
                <span class="swiper-icon icon-bracket-r"><span class="sr-only">Next</span></span>
              </div>
              <div class="swiper-button swiper-button-prev">
                <span class="swiper-icon icon-bracket-l"><span class="sr-only">Previous</span></span>
              </div>
            </div>
          </div>
        </div>
      {% else %}
        <div class="row">
            {% block grid_items %}
                {% for item in items %}
                  {% block grid_item %}
                    <div class="row-item span-6-m span-4-t">
                      <img src="{{ item.image }}" alt="{{ item.image_alt }}">
                    </div>
                  {% endblock %}
                {% endfor %}
            {% endblock %}
        </div>
      {% endif %}
    {% endif %}
  </div>
{% endblock %}
