{% if items %}
  <div class="row {{ class }}">
    {% block content %}
      {% for item in items %}
        {% block item %}
          {% include "@ul_base_theme/2_pieces/grid-item.twig" with {
            item: item,
            per_row: per_row
          } only %}
        {% endblock %}
      {% endfor %}
    {% endblock %}
  </div>
{% endif %}
